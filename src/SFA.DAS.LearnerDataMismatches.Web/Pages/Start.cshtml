@page
@model StartModel

@section BreadCrumbs {
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            <li class="govuk-breadcrumbs__list-item">
                <a asp-page="index" class="govuk-breadcrumbs__link">Data Unlocker</a>
            </li>
            <li class="govuk-breadcrumbs__list-item" aria-current="page">
                Search learner
            </li>
        </ol>
    </div>
}

<form method="post">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">Search for a learner</h1>
            <div class="govuk-form-group" sfa-anyvalidationerror-class="govuk-form-group--error">
                <label class="govuk-label" for="Uln">
                    Enter ULN
                </label>
                <div id="uln-hint" class="govuk-hint">
                    Unique learner number
                </div>
                <span asp-validation-for="Uln" id="uln-error" class="govuk-error-message"></span>
                <input class="govuk-input" id="Uln" sfa-validationerror-class="govuk-input--error" sfa-validation-for="Uln" maxlength="10" name="Uln" asp-for="Uln" spellcheck="false">
            </div>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <button class="govuk-button" type="submit" data-module="govuk-button">
                Search
            </button>
        </div>
    </div>
</form>






